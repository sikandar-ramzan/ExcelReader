<div class="mt-5">
    <div class="center">
        <form id="sign-up-form" class="form-signin">
            <h1 class="h3 mb-3 font-weight-normal">Please sign up</h1>
            <label for="inputEmail" class="sr-only">Email address</label>
            <input type="text" id="inputEmail" class="form-control" placeholder="Email address" required="" autofocus="">
            <label for="inputPassword" class="sr-only">Password</label>
            <input type="password" id="inputPassword" class="form-control" placeholder="Password" required="">

            <div class="form-check">
                <input type="checkbox" id="isAdminCheckbox" class="form-check-input">
                <label class="form-check-label" for="isAdminCheckbox">Is Admin?</label>
            </div>

            <button class="btn btn-lg btn-primary btn-block" type="submit">Sign Up</button>
            <p class="mt-5 mb-3 text-muted">© Sikandar</p>
        </form>
    </div>
</div>