@model List<ITRequest>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

@if(Model.Count < 1)
{
	<div class="container">
		<h2 class="display-4">No Records Found!</h2>
	</div>
}

@if (Model.Count() > 0)
{
	<hr />
	<table id="it-request-table" cellpadding="2" cellspacing="1" border="1" class="table table-striped table-hover table-bordered">
		<thead>
			<tr>
				<th scope="col">Request Id</th>
				<th scope="col">Request Author</th>
				<th scope="col">Type</th>
				<th scope="col">Subject</th>
				<th scope="col">Body</th>
				<th scope="col">Request Submission Date</th>
				<th scope="col">Request Completion Date</th>
				<th scope="col">Status</th>
			</tr>
		</thead>
		<tbody class="table-group-divider">
			@foreach (ITRequest itRequest in Model)
			{
				<tr>
					<th scope="row">@itRequest.RequestId</th>
					<td>@itRequest.Author</td>
					<td>@itRequest.Type</td>
					<td>@itRequest.Subject</td>
					<td>@itRequest.Body</td>
					<td>@itRequest.RequestSubmissionDate</td>
					<td>@itRequest.RequestCompletionDate</td>
					<td>@itRequest.Status</td>
				</tr>
			}

		</tbody>
		
	</table>

}

